<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Impact.MainGroup"
             x:Name="MainGroup_content"  
             Title="Professor 1 Posts"
             NavigationPage.HasBackButton="True"
             BackgroundColor="Transparent">
  <FlexLayout JustifyContent="SpaceEvenly" AlignItems="Center" Direction="Column" Margin="20,20,20,20">
    <AbsoluteLayout Margin="5,0,5,5">
        <Frame BorderColor="Blue"
               CornerRadius="5"
               Padding="8">
            <StackLayout>
                <Editor Text="Post 1 Topic"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    HorizontalOptions="Fill"/>
                    <BoxView Color="Black"
                    HeightRequest="2"
                    HorizontalOptions="Fill" />
                <Editor Text="Summary of Topic 1"
                         HorizontalOptions="Fill"/>
            </StackLayout>
         </Frame>
    </AbsoluteLayout>
  </FlexLayout>
</ContentPage>
